@page "/Auth/SignUp"

@model WebAdvert.Web.Pages.Auth.SignUpModel
@{
    ViewData["Title"] = "Sign Up";
}

<h1>Sign Up</h1>
<br />

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group row mb-1">
        <label class="col-sm-2 col-form-label" asp-for="Input.Name"></label>
        <div class="col-sm-3">
            <input class="form-control" asp-for="Input.Name" />
            <span class="text-danger" asp-validation-for="Input.Name"></span>
        </div>
    </div>

    <div class="form-group row mb-1">
        <label class="col-sm-2 col-form-label" asp-for="Input.Email"></label>
        <div class="col-sm-3">
            <input class="form-control" asp-for="Input.Email" />
            <span class="text-danger" asp-validation-for="Input.Email"></span>
        </div>
    </div>

    <div class="form-group row mb-1">
        <label class="col-sm-2 col-form-label" asp-for="Input.Password"></label>
        <div class="col-sm-3">
            <input class="form-control" asp-for="Input.Password" />
            <span class="text-danger" asp-validation-for="Input.Password"></span>
        </div>
    </div>

    <div class="form-group row mb-1">
        <label class="col-sm-2 col-form-label" asp-for="Input.ConfirmPassword"></label>
        <div class="col-sm-3">
            <input class="form-control" asp-for="Input.ConfirmPassword" />
            <span class="text-danger" asp-validation-for="Input.ConfirmPassword"></span>
        </div>
    </div>

    <br />
    <div class="form-group row mb-1">
        <div class="col-sm-2">
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </div>
    </div>
</form>